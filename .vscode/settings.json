{
  "editor.formatOnSave": true,
  "editor.wordWrap": "on",
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cSpell.words": [
    "Cancún",
    "Colonia",
    "CROS",
    "Margaritaville",
    "México",
    "Petempich",
    "Rounak",
    "Pilcher"
  ]
}
